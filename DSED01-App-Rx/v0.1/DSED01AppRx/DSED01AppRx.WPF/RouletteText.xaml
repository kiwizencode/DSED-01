<Window x:Class="DSED01AppRx.WPF.RouletteGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSED01AppRx.WPF"
        mc:Ignorable="d"
        Title="A Veriation of Russian Roulette Game" Height="600" Width="500"
        WindowStyle="None">
    <Grid Margin="0,0,0,0.4" HorizontalAlignment="Left" Width="500">
        <Grid Height="158" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="495">
            <Border BorderBrush="Black" BorderThickness="1" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="482" Margin="7,0,0,11"/>
            <Label Content="Set the rules of the Roulette Game:" HorizontalAlignment="Left" Height="42" Margin="12,5,0,0" VerticalAlignment="Top" Width="377" FontSize="20" FontFamily="Segoe Print"
                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <!-- https://stackoverflow.com/questions/5315497/how-to-center-a-label-text-in-wpf  -->
            <Label Content="Rule 1 : Pick a random number from 1 to 6." HorizontalAlignment="Left" Height="45" Margin="11,40,0,0" VerticalAlignment="Top" Width="477" FontSize="20"
                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Segoe Print"/>
            <Label Content="Rule 2 : Try to pick out random number." HorizontalAlignment="Left" Height="46" Margin="8,73,0,0" VerticalAlignment="Top" Width="443" FontSize="20"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Segoe Print"/>
            <Label Content="You have 2 chances." HorizontalAlignment="Left" Height="41" Margin="6,106,0,0" VerticalAlignment="Top" Width="407" FontSize="20"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Segoe Print"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="415" Margin="10,168,0,0" VerticalAlignment="Top" Width="480">
            <Label Content="1. Randomize a number. (1 to 6)" HorizontalAlignment="Left" Height="38" Margin="1,-6,0,0" VerticalAlignment="Top" Width="367" FontFamily="Segoe Print" FontSize="20"/>
            <Label Content="2. Get the next number." HorizontalAlignment="Left" Height="38" Margin="1,26,0,0" VerticalAlignment="Top" Width="367" FontFamily="Segoe Print" FontSize="20"/>
            <Label Content="3. Make your choice : " HorizontalAlignment="Left" Height="44" Margin="4,56,0,0" VerticalAlignment="Top" Width="227" FontFamily="Segoe Print" FontSize="20"/>
            <Label Content="3.1 Dicard this number." HorizontalAlignment="Left" Height="40" Margin="30,84,0,0" VerticalAlignment="Top" Width="253" FontFamily="Segoe Print" FontSize="20"/>
            <Label Content="3.2 Pick this number." HorizontalAlignment="Left" Height="40" Margin="30,111,0,0" VerticalAlignment="Top" Width="253" FontFamily="Segoe Print" FontSize="20"/>
            <TextBlock HorizontalAlignment="Left" Margin="20,50,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontFamily="Segoe Print" FontSize="20" Width="393">
                3.2.1 If this number match the random number => You win.
            </TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="10,24,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontFamily="Segoe Print" FontSize="20" Width="393">
                3.2.2 If this number does match the random number.
            </TextBlock>
            <!--Label Content="3.2.1 This number match with the random number." HorizontalAlignment="Left" Height="40" Margin="71,138,0,0" VerticalAlignment="Top" Width="381" FontFamily="Segoe Print" FontSize="20"/-->
        </Grid>

    </Grid>
</Window>
